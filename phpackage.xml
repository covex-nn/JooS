<?xml version="1.0"?>
<control>
<package name="JooS" version="3.0.6">
  <source><![CDATA[
    "library", "bootstrap.php"
  ]]></source>
  
  <depends><![CDATA[
    extension::json
  ]]></depends>
  
  <breaks><![CDATA[
    JooS_Syntax < 3.0, 
    JooS_Stream < 3.0, 
    JooS_PHPackager < 3.0, 
    JooS_Deploy < 3.0
  ]]></breaks>
  
  <add>
    <?pre-install
      attach("JooS\\Log\\Log_Event", array("JooS\\Log\\Log", "observer"));
      $/logWriters = array(
        "output"
      );
    ?>
    
    <?post-install
      #JooS_Log/writers = $/logWriters;
    ?>
    
    <?post-upgrade
      #JooS_Log/writers = $/logWriters;
    ?>
  </add>
  
  <delete>
    <?post-remove
      #JooS_Log/writers = array();
      detach("JooS\\Log\\Log_Event", array("JooS\\Log\\Log", "observer"));
    ?>
  </delete>
</package>
</control>
