<?xml version="1.0"?>
<control>
<package name="JooS" version="2.0">
  <source><![CDATA[
    "library", "bootstrap.php"
  ]]></source>
  
  <depends><![CDATA[
    extension::json
  ]]></depends>
  
  <add>
    <?pre-install
      attach("JooS_Event_Log", array("JooS_Log", "observer"));
      $/logWriters = array(
        "output"
      );
    ?>
    
    <?post-install
      #JooS_Log/writers = $/logWriters;
    ?>
    
    <?post-upgrade
      #JooS_Log/writers = $/logWriters;
    ?>
  </add>
  
  <delete>
    <?post-remove
      #JooS_Log/writers = array();
      detach("JooS_Event_Log", array("JooS_Log", "observer"));
    ?>
  </delete>
</package>
</control>
